import java.util.*;
public class FrogJumping 
{
	public static void main(String[] args) 
	{
		long s=0;
		Scanner in = new Scanner(System.in);
		int t = in.nextInt();
		for(int i =0;i<t;i++)
		{
			long a = in.nextInt();
			long b = in.nextInt();
			long k = in.nextInt();
			if(k%2 == 0)
				s = (k/2)*a - (k/2)*b;
			else
				s = ((k/2)+1)*a - (k/2)*b;
			System.out.println(s);
		}
	}
}
