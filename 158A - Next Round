import java.util.Scanner;
public class NextRound 
{
	public static void main(String[] args) 
	{
		int i,b=0;
		Scanner in = new Scanner(System.in);
		int n = in.nextInt();
		int k = in.nextInt();
		int[] a = new int[n];
		for(i=0;i<n;i++)
		{
			a[i] = in.nextInt();
		}
		for(i=0;i<n;i++)
		{
			if(a[i] >= a[k-1] && a[i]>0)
				b++;
		}
		System.out.println(b);
	}

}
